<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'show',article_path(article) %></td>
      <td><%= link_to 'edit',edit_article_path(article) %></td>
      <td><%= link_to 'del',article_path(article),method: :delete,data: { confirm: 'Are you sure' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Article',new_article_path %>