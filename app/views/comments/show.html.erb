<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<h2>Add a comment</h2>
<%= from_for [@article,@article.comments.build] do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explannation">
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg.body %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit '提交' %>
  </p>
<% end %>

<%= link_to 'Back',articles_path %> | <%= link_to 'Edit',edit_article_path(@article) %>